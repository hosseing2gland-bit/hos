# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/antidetect_browser
MONGODB_TEST_URI=mongodb://localhost:27017/antidetect_browser_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-64-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_RESET_PASSWORD_EXPIRES_IN=10m

# Encryption Configuration (32 characters for AES-256)
ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# AWS S3 Configuration (Optional - for Cloud Sync)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=antidetect-profiles

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@antidetect.com

# Application
APP_NAME=Anti-Detect Browser
APP_URL=http://localhost:3000
CLIENT_URL=http://localhost:3001

# Feature Flags
ENABLE_CLOUD_SYNC=true
ENABLE_TEAM_COLLABORATION=true
ENABLE_API_AUTOMATION=true
ENABLE_AUDIT_LOG=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
