{
  "name": "antidetect-browser-desktop",
  "version": "1.0.0",
  "description": "Anti-Detect Browser Desktop Application",
  "main": "main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cd renderer && npm run dev",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm run build:react && electron-builder",
    "build:react": "cd renderer && npm run build",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:win": "npm run build:react && electron-builder --win",
    "build:linux": "npm run build:react && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "antidetect",
    "browser",
    "electron",
    "privacy"
  ],
  "author": "",
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "puppeteer-core": "^21.6.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.antidetect.browser",
    "productName": "Anti-Detect Browser",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "preload/**/*",
      "browser-core/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
